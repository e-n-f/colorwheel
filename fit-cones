sata            = 35.7153
satb            = -25.6021
satc            = 584.514
satd            = 0.040497
sate            = -0.320094

sat(x) = sata - satb * abs(atan((x - satc) * satd) - sate)
fit sat(x) "uchikawa-saturation" using 1:2 via sata, satb, satc, satd, sate
plot sat(x), "uchikawa-saturation" using 1:2


